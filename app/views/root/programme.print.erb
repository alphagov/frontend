<header>
  <h1>Benefits &amp; credits: <%= @publication.title %></h1>
  <p>Notes</p>
</header>

<% @publication.parts.each do |part| %>
<article id="<%= part.slug %>">
  <header>
    <h1>Part <%= part_number(@publication.parts, part) %>: <%= part.title %></h1>
  </header>

  <%= to_govspeak(part.body) %>
</article>
<% end %>

<%= render partial: 'publication_metadata', locals: {:publication => @publication, :artefact => @artefact, :api_links => { 'application/json' => publication_api_path(@publication, :edition => @edition) }}, formats: ["html"] %>

