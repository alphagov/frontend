<section id="content" role="main" class="group">

  <header class="page-header group">
    <hgroup>
      <h1><%= @publication.title %></h1>
    </hgroup>
  </header>

  <div class="article-container group">
    <div>Support value &pound;<%= @publication.min_value %> to &pound;<%= @publication.max_value %></div>

    <nav role="navigation" class="chapters-navigation">
      <ol>
      <% @publication.parts.each do |part| %>
        <li><a href="<%= "#{part_path(@publication.slug, part.slug, @edition)}" %>"><%= part.title %></a></li>
      <% end %>
      </ol>
    </nav>

    <article class="group" role="article">
      <div class="inner">
        <header><h1><%= @part.title %></h1></header>

        <%= to_govspeak(@part.body) %>

        <nav class="part-pagination return-to-top">
          <a href="#wrapper">Return to top &uarr;</a>
        </nav>

      </div>

    </article>
    <%= render 'publication_metadata', :publication => @business_support, :artefact => @artefact, :api_links => { 'application/json' => publication_path(@publication.slug, :edition => @edition, :format => :json) } %>
  </div>
</section>
