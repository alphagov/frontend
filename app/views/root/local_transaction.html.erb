<section id="content" role="main" class="group">

  <header class="page-header group">
    <hgroup>
      <h1><span>Service</span> <%= @local_transaction.title %></h1>
    </hgroup>
  </header>
  <div class="article-container group">
    <article role="article" class="group">
      <div class="inner">
        <section class="intro">
          <div class="get-started-intro">

          <%= to_govspeak(@local_transaction.introduction) %>

          </div>
        </section>

        <% if @local_transaction_details['local_interaction'] %>

          <p id="get-started" class="get-started">
             <a href="<%= @local_transaction_details['local_interaction']['url'] %>" rel="external" class="button">
               <span class="button-content"><span class="call-to-action">Get started</span><span class="destination"> on <%= @local_transaction_details['local_authority']['name'] %></span><span class="indicator"></span>
             </a>
          </p>

          <% if @local_transaction_details['local_authority'] %>
            <% authority = @local_transaction_details['local_authority'] %>
            <div class="contact">
              <div class="contact vcard">
                <p>This service is provided by <a class="url fn org" href="<%= authority['contact_url'] %>"><%= authority['name'] %></a> <%= link_to '(change location)', publication_path(@publication.slug) %></p>

                <% if authority['contact_address'] %><div class="adr"><%= simple_format authority['contact_address'].join("\n") %></div><% end %>
                <div class="tel"><strong>Telephone:</strong> <span class="value"><%= authority['contact_phone'] %></span></div>
              </div>
            </div>
          <% end %>

        <% elsif @local_transaction_details['local_authority'] %>

          <div class="application-notice help-notice">
            <p>Sorry, we couldn't find details from <%= @local_transaction_details['local_authority']['name'] %>  for that service in your area.</p>
            <% if @local_transaction_details['local_authority']['website'] %><p>You may find more information on the <%= link_to @local_transaction_details['local_authority']['name'] + " website", @local_transaction_details['local_authority']['contact_url'] %></p><% end %>
          </div>

        <% else %>
          <%= render :partial => 'location_form', :locals => {:format => 'service'} %>
        <% end %>

        <section class="more">

          <% if @local_transaction.expectations.present? %>
          <h2>What you need to know</h2>

          <div class="more">
            <ul class="helpers group">
              <% @local_transaction.expectations.each do |e| %>
                <li class="<%= e.css_class %>">
                <%= e.text %>
                </li>
              <% end %>
            </ul>

            <%= to_govspeak(@local_transaction.more_information) %>
          </div>
          <% end %>
        </section>

      </div>
    </article>
    <%= render 'publication_metadata', :publication => @local_transaction, :artefact => @artefact, :api_links => { 'application/json' => publication_path(@publication.slug, edition: @edition, format: :json, all: true) } %>
  </div>
</section>

<div id="related-items"></div>
