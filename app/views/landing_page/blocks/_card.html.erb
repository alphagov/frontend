<%
  add_view_stylesheet("landing_page/card")
  border_top ||= false
  card_classes = "app-b-card"
  card_classes << " app-b-card--border-top" if block.data["border_top"]
%>

<div class="<%= card_classes %>">
  <%= render "govuk_publishing_components/components/heading", {
    text: govuk_styled_link(block.content, path: block.href, card_link: block.link_cover_block),
    heading_level: 2,
    margin_bottom: 0,
  } %>
  <div class="app-b-card__textbox">
    <% if block.data["body_content"] %>
      <%= render "govuk_publishing_components/components/govspeak", {
      } do %>
        <% if block.data["big_number"] %>
          <% if block.data["big_number"]["preface"] %>
            <p><%= block.data["big_number"]["preface"] %></p>
          <% end %>
          <% if block.data["big_number"]["number"] %>
            <div class="stat-headline">
              <p>
                <em><%= block.data["big_number"]["number"] %></em>
              </p>
            </div>
          <% end %>
        <% end %>
        <p><%= block.data["body_content"] %></p>
      <% end %>
    <% end %>
  </div>

  <% block.card_content.each do |subblock| %>
    <% if subblock.data["type"] == "statistics" %>
      <div class="app-b-card__chart">
        <%
          options = { margin_bottom: 0 }
          options[:height] = 200 if subblock.data["minimal"]
        %>
        <%= render_block(subblock, options:)  %>
      </div>
    <% else %>
      <%= render_block(subblock)  %>
    <% end %>
  <% end %>

  <% if block.image %>
    <figure class="app-b-card__figure">
      <%= image_tag(block.image.source, alt: block.image.alt, class: "app-b-card__image") %>
    </figure>
  <% end %>
</div>
