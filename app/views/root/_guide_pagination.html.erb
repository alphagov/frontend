<% if @publication.parts.size > 1 then %>
<footer>
  <nav class="pagination" role="navigation" aria-label="Pagination">
    <ul class="group">
      <%- if @publication.has_parts? -%>
        <%- if @publication.has_previous_part? -%>
          <li class="previous">
            <%= link_to previous_part_path(@publication, @publication.current_part, @edition), :title => t('formats.guide.navigate_to_previous_part'), :rel => "prev" do %>
              <span class="pagination-label">Previous </span> <span class="pagination-part-title"><%= @publication.part_before(@publication.current_part).title %></span>
            <% end %>
          </li>
        <%- end -%>
        <%- if @publication.has_next_part? -%>
          <li class="next">
            <%= link_to next_part_path(@publication, @publication.current_part, @edition), :title => t('formats.guide.navigate_to_next_part'), :rel => "next" do %>
              <span class="pagination-label">Next</span> <span class="pagination-part-title"><%= @publication.part_after(@publication.current_part).title %></span>
            <% end %>
          </li>
        <%- end -%>
      <%- end -%>
    </ul>
  </nav>
</footer> 
<% end %>
