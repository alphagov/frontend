<%
  img_classes = [
    "govuk-!-width-full",
    "govuk-!-margin-bottom-6",
    ("border-top--#{style(block.data["theme_colour"])}" if block.data["theme_colour"])
  ]
%>

<%= image_tag(
  block.image.sources.desktop,
  alt: block.image.alt,
  srcset: {
    block.image.sources.desktop => "630w",
    block.image.sources.desktop_2x => "1260w",
    block.image.sources.tablet => "708w",
    block.image.sources.tablet_2x => "1416w",
    block.image.sources.mobile => "610w",
    block.image.sources.mobile_2x => "1220w",
  },
  sizes: [
    "(max-width: 640px) 610px",
    "(max-width: 768px) 707px",
    "630px",
  ].join(","),
  class: img_classes,
) %>
