<% content_for :head do %>
  <%= stylesheet_link_tag "views/_landing_page/card", media: "all" %>
<% end %>
<div class="card <%= "border-top--#{style(block.data["theme_colour"])}" %>">
  <div class="card__textbox">
    <%= render "govuk_publishing_components/components/heading", {
      text: govuk_styled_link(block.content, path: block.href),
      heading_level: 2,
    } %>
  </div>

  <% block.card_content.each do |subblock| %>
    <%= render_block(subblock) %>
  <% end %>

  <% if block.image %>
    <figure class="card__figure">
      <%= image_tag(block.image.source, alt: block.image.alt, class: "card__image") %>
    </figure>
  <% end %>
</div>
