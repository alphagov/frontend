<header>
  <h1><%= @publication.title %></h1>
  <p><%= t 'formats.guide.notes' %></p>
</header>

<% @publication.parts.each do |part| %>
<article id="<%= part.slug %>" class="content-block">
  <header>
    <h1><%= part_number(@publication.parts, part) %>. <%= part.title %></h1>
  </header>

  <%= raw part.body %>
</article>
<% end %>

<%= render partial: 'publication_metadata', locals: {:publication => @publication, :api_links => { 'application/json' => publication_api_path(@publication, :edition => @edition) }}, formats: ["html"] %>

