<% opening_datetime = capture do %>
  <time datetime="<%= content_item.opening_date_time %>"><%= opening_date(content_item.opening_date_time) %></time>
<% end %>

<% closing_datetime = capture do %>
  <time datetime="<%= content_item.closing_date_time %>"><%= closing_date(content_item.closing_date_time) %></time>
<% end %>

<% call_for_evidence_date = capture do %>
  <%= opens_closes_or_ran(content_item.document_type, content_item.schema_name) %>
  <br>
  <strong>

    <% if content_item.closed? %>
      <%= opening_datetime %> to
      <%= closing_datetime %>
    <% elsif content_item.open? %>
    <%= closing_datetime %>
    <% elsif content_item.unopened? %>
      <%= opening_datetime %>
    <% end %>
  </strong>

  <% if content_item.unopened? %>
    <br>
    <%= t("formats.call_for_evidence.closes") %><br>
    <strong><%= closing_datetime %></strong>
  <% end %>
<% end %>

<% call_for_evidence_desc = capture do %>
  <%= content_item.description %>
  <% if content_item.held_on_another_website? %>
    <br><br>
    <strong>
      <%= t("formats.call_for_evidence.another_website_html", closed: content_item.closed? ? t("formats.call_for_evidence.was") : t("formats.call_for_evidence.is_being"), url: content_item.held_on_another_website_url) %>.
    </strong>
  <% end %>
<% end %>

<%= render "govuk_publishing_components/components/summary_banner", {
  secondary_text: call_for_evidence_date,
  text: call_for_evidence_desc,
  title: t("formats.call_for_evidence.summary"),
} %>
