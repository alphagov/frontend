        <% group_by_initial_letter(@countries).each do |initial,countries| %>
          <section id="<%= initial %>" class="list">
            <h1><%= initial %></h1>
            <ul>
              <% countries.each do |country| %>
                <li><%= link_to country['name'], travel_advice_country_path(country['identifier']) %></li>
              <% end %>
            </ul>
          </section>
        <% end %>
      </div>
    </article>

    <div id="report-a-problem"></div>
  </div>
</section>
