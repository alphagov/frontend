<% content_for :head do %>
  <%= stylesheet_link_tag "views/_manual", media: "all" %>
  <meta name="description"
   content="<%= strip_tags(I18n.t("formats.manuals.updates_description")) %> '<%= content_item.title %> - <%= I18n.t("formats.manuals.manual_type") %>'.">
<% end %>

<% content_for :title, build_page_title([I18n.t("formats.manuals.updates"),content_item.title,I18n.t("formats.manuals.manual_type")]) %>

<% content_for :before_main do %>
  <%= render "shared/manuals/header", {
    content_item: @content_item,
    heading_level: 2,
    is_updates_page: true,
  } %>
<% end %>

<%= render "shared/manuals/manual_updates_layout" %>
