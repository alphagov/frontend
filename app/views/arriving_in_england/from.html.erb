<% content_for :title do %>Where have you travelled from? - GOV.UK<% end %>

<main id="content" role="main" class="govuk-grid-column-two-thirds">
<%= form_with url: arriving_in_england_any_other_path, method: :get do %>
  <%= render "govuk_publishing_components/components/select", {
    id: "country",
    label: "Where have you travelled from?",
    heading_size: "xl",
    is_page_heading: true,
    options: @world_locations.map do |(slug, title)|
      {
        text: title,
        value: slug,
      }
    end
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Next"
  } %>
<% end %>
