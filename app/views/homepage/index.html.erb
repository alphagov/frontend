<% content_for :extra_headers do %>
<link rel="canonical" href="<%= Frontend.govuk_website_root + root_path %>" />
<meta name="description" content="GOV.UK - The place to find government services and information - Simpler, clearer, faster" />
<% end %>
<% content_for :title, "Welcome to GOV.UK" %>
<% content_for :body_classes, "homepage" %>

<main id="content" role="main">
  <header class="home-top">
    <div class="govuk-width-container home-top__inner">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <%= render "govuk_publishing_components/components/title", {
            title: "Welcome to GOV.UK",
            inverse: true,
            margin_top: 5,
            margin_bottom: 3
          } %>
          <p class="home-top__intro"><%= t('homepage.index.intro') %></p>
          <p class="home-top__intro home-top__intro--simpler"><%= t('homepage.index.intro_simpler') %></p>

          <form action="/search" method="get" role="search">
            <%= render "govuk_publishing_components/components/search", on_govuk_blue: true %>
          </form>
        </div>

        <div class="govuk-grid-column-one-third">
          <div class="home-top__links">
            <h2 class="home-top__links-title"><%= t('homepage.index.popular') %></h2>
            <ul class="home-top__links-list">
              <li class="home-top__links-item"><a href="/guidance/covid-19-coronavirus-restrictions-what-you-can-and-cannot-do" class="home-top__links-link"><%= t('homepage.index.covid') %></a></li>
              <li class="home-top__links-item"><a href="/transition" class="home-top__links-link"><%= t('homepage.index.brexit') %></a></li>
              <li class="home-top__links-item"><a href="/personal-tax-account" class="home-top__links-link"><%= t('homepage.index.tax_account') %></a></li>
              <li class="home-top__links-item"><a href="/jobsearch" class="home-top__links-link"><%= t('homepage.index.job_search') %></a></li>
              <li class="home-top__links-item"><a href="/sign-in-universal-credit" class="home-top__links-link"><%= t('homepage.index.universal_credit') %></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>

  <div id="homepage" class="govuk-width-container">
    <section class="home-services" aria-labelledby="services-and-information-label" id="services-and-information">
      <div class="govuk-grid-row">
        <h2 id="services-and-information-label" class="govuk-visually-hidden"><%= t('homepage.index.services_and_information') %></h2>
        <%= render :partial => "categories" %>
      </div>
    </section>

    <hr class="home-divider" id="departments-and-policy" aria-hidden="true" />

    <section class="departments-and-policy" aria-labelledby="departments-and-policy-label">
      <div class="govuk-grid-row home-numbers-and-info">
        <h2 id="departments-and-policy-label" class="govuk-visually-hidden"><%= t('homepage.index.departments_and_policy') %></h2>
        <div class="govuk-grid-column-one-third">
          <ul class="home-numbers">
            <li>
              <a href="/government/organisations#ministerial_departments" class="home-numbers__link home-numbers__link--first govuk-link">
                <strong class="home-numbers__large">23</strong>
                <%= t('homepage.index.ministerial_departments') %>
              </a>
            </li>
            <li>
              <a href="/government/organisations#agencies_and_other_public_bodies" class="home-numbers__link govuk-link">
                <strong class="home-numbers__large">412</strong>
                <%= raw(t('homepage.index.other_agencies')) %>
              </a>
            </li>
          </ul>
        </div>

        <div class="govuk-grid-column-two-thirds">
          <p class="home-info">
            <%= t('homepage.index.merged_websites_html') %>
          </p>
          <p class="home-info">
            <%= t('homepage.index.see_all') %> <a href="/search/news-and-communications" class="govuk-link"><%= t('homepage.index.news') %></a>,
            <a href="/search/research-and-statistics" class="govuk-link"><%= t('homepage.index.statistics') %></a>
            <%= t('and') %>
            <a href= "<%= CGI::escapeHTML('/search/policy-papers-and-consultations?content_store_document_type[]=open_consultations&content_store_document_type[]=closed_consultations') %>" class="govuk-link"><%= t('homepage.index.consultations') %></a>.
          </p>
        </div>
      </div>
    </section>

    <section>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-third">
          <a href="/coronavirus" aria-hidden="true" tabindex="-1">
            <%= image_tag "homepage/covid-19-promo-hands-face-space.png", {
              alt: "Hands, Face, Space. Fresh Air",
              class: "home-promo__image",
              height: 407,
              loading: "lazy",
              width: 610,
            } %>
          </a>
          <h3>
            <a href="/coronavirus" class="govuk-link home-promo__link">
              <%= t('homepage.index.coronavirus') %>
            </a>
          </h3>
          <p class="home-promo__text">
            <%= t('homepage.index.coronavirus_restrictions') %>
          </p>
        </div>

        <div class="govuk-grid-column-one-third">
          <a href="/travel-abroad" aria-hidden="true" tabindex="-1">
            <%= image_tag "homepage/travel-abroad-step-by-step.png", {
              alt: "",
              class: "home-promo__image",
              height: 407,
              loading: "lazy",
              width: 610,
            } %>
          </a>
          <h3>
            <a href="/travel-abroad" class="govuk-link home-promo__link">
              <%= t('homepage.index.travel_abroad') %>
            </a>
          </h3>
          <p class="home-promo__text">
            <%= t('homepage.index.travel_abroad_check') %>
          </p>
        </div>

        <div class="govuk-grid-column-one-third">
          <a href="https://www.nhs.uk/conditions/coronavirus-covid-19/testing/get-tested-for-coronavirus/" aria-hidden="true" tabindex="-1">
            <%= image_tag "homepage/nhs-test-and-trace.png", {
              alt: "NHS, Test and Trace",
              class: "home-promo__image",
              height: 407,
              loading: "lazy",
              width: 610,
            } %>
          </a>
          <h3>
            <a href="https://www.nhs.uk/conditions/coronavirus-covid-19/testing/get-tested-for-coronavirus/" class="govuk-link home-promo__link">
              <%= t('homepage.index.get_tested') %>
            </a>
          </h3>
          <p class="home-promo__text">
            <%= t('homepage.index.get_tested_description') %>
          </p>
        </div>
      </div>
    <section>

    <hr class="home-divider" id="more-on-govuk" aria-hidden="true" />

    <section aria-labelledby="more-on-govuk-label">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-third">
          <h2 id="more-on-govuk-label" class="home-more__title"><%= t('homepage.index.more') %></h2>
        </div>

        <div class="govuk-grid-column-one-third">
          <h3 class="home-more__subtitle"><%= t('homepage.index.most_active') %></h3>
          <ul class="govuk-list home-more__list">
            <li><a href="/jobsearch" class="govuk-link"><%= t('homepage.index.find_job') %></a></li>
            <li><a href="/student-finance-register-login" class="govuk-link"><%= t('homepage.index.student_finance_login') %></a></li>
            <li><a href="/passport-fees" class="govuk-link"><%= t('homepage.index.passport_fees') %></a></li>
            <li><a href="/jobseekers-allowance" class="govuk-link"><%= t('homepage.index.jobseekers_allowance') %></a></li>
            <li><a href="/council-tax-bands" class="govuk-link"><%= t('homepage.index.council_tax_bands') %></a></li>
            <li><a href="/running-a-limited-company" class="govuk-link"><%= t('homepage.index.running_limited_company') %></a></li>
            <li><a href="/book-a-driving-theory-test" class="govuk-link"><%= t('homepage.index.driving_test') %></a></li>
            <li><a href="/calculate-vehicle-tax-rates" class="govuk-link"><%= t('homepage.index.calculate_vehicle_tax') %></a></li>
            <li><a href="/vehicle-tax" class="govuk-link"><%= t('homepage.index.vehicle_tax') %></a></li>
            <li><a href="/vat-rates" class="govuk-link"><%= t('homepage.index.vat_rates') %></a></li>
          </ul>
        </div>

        <div class="govuk-grid-column-one-third" id="promo">
          <h3>
            <a href="/bank-holidays" class="govuk-link home-more-promo" tabindex="-1">
              <span class="home-more-promo__link-content"><%= t('homepage.index.uk_bank_holidays') %></span>
            </a>
          </h3>
          <p class="home-promo__text"><%= t('homepage.index.uk_bank_holidays_dates_html') %></p>
        </div>
      </div>
    </section>
  </div>
</main>
<!-- <%= File.basename(__FILE__) %> -->
