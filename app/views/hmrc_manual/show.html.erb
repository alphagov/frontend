<% content_for :head do %>
  <%= stylesheet_link_tag "views/_manual", media: "all" %>
<% end %>

<% content_for :title, build_page_title([content_item.title,I18n.t("formats.manuals.hmrc_manual_type")]) %>

<% content_for :before_main do %>
  <%= render "shared/manuals/header", {
    content_item: content_item,
    heading_level: 1,
    green_background: true,
    type: I18n.t("formats.manuals.hmrc_manual_type"),
  } %>
<% end %>

<%= render "shared/manuals/manual_layout" do %>
  <% content_item.section_groups.each do |group| %>
    <% next if group["child_sections"].blank? %>
    <div class="subsection-collection">
      <%= render "shared/manuals/hmrc_sections", group: group, heading_level: 3 %>
    </div>
  <% end %>
<% end %>
