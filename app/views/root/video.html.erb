<section id="content" role="main" class="group">

  <header class="page-header group">
    <hgroup>
      <h1><span>Guide</span> <%= @publication.title %></h1>
    </hgroup>
  </header>

  <div class="article-container group">
    <article role="article" class="group">
      <div class="inner">

        <div class="summary">
          <p><%= @publication.video_summary %></p>
        </div>

        <% if video_embed_url(@publication) %>
          <figure class="media-player-wrapper" id="video">
            <a href="<%= video_embed_url(@publication) %>">Watch <%= @publication.title %></a>
          </figure>
        <% end %>

        <%= to_govspeak(@publication.body) %>
      </div>
    </article>

    <%= render 'publication_metadata', :publication => @publication, :artefact => @artefact, :api_links => { 'application/json' => publication_path(@publication.slug, :edition => @video, :format => :json) } %>

  </div>

</section>

<div id="related-items"></div>

<% content_for :extra_javascript do %>
  <%= javascript_include_tag 'media-player.js', :defer => 'defer' %>
<% end %>
<% content_for :extra_stylesheets do %>
  <%= stylesheet_link_tag 'media-player.css' %>
<% end %>
