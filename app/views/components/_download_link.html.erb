<%
  add_app_component_stylesheet("download-link")

  text ||= nil
  href ||= nil
  icon ||= "download"

  link_data_attributes ||= false

  component_helper = GovukPublishingComponents::Presenters::ComponentWrapperHelper.new(local_assigns)
  component_helper.add_class("govuk-body govuk-link govuk-!-font-weight-bold govuk-!-display-none-print")
  component_helper.add_class("app-c-download-link app-c-download-link--#{icon}")
  component_helper.add_data_attribute(link_data_attributes) if link_data_attributes
%>
<% if text && href %>
  <%= link_to text, href, **component_helper.all_attributes %>
<% end %>
